<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
    >


    <!-- Questions scroll view -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="464dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:clickable="true">

            <include layout="@layout/questions_list"/>

        </ScrollView>

    </LinearLayout>


    <!-- Room Bottom bar -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick="changeRoom"
            android:text="Unirse"/>

        <EditText
            android:id="@+id/roomField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/join"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/join"
            android:ems="10"
            android:hint="Numero de sala"
            android:inputType="number"
            android:lines="1"
            android:maxLength="14"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/RoomTextViex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/roomField"
            android:layout_alignParentEnd="true"
            android:text="Sala"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </RelativeLayout>


</RelativeLayout>