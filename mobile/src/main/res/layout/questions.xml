<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="1"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="false"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/rb1a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="0,0"
                            android:text="A"
                            />

                        <RadioButton
                            android:id="@+id/rb1b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="0,1"
                            android:text="B"
                            />

                        <RadioButton
                            android:id="@+id/rb1c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="0,2"
                            android:text="C"
                            />

                        <RadioButton
                            android:id="@+id/rb1d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="0,3"
                            android:text="D"
                            />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/resultado1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/radioGroup1"
                        android:text="Ninguna"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="2"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="false"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/rb2a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="1,0"
                            android:text="A"
                            />

                        <RadioButton
                            android:id="@+id/rb2b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="1,1"
                            android:text="B"
                            />

                        <RadioButton
                            android:id="@+id/rb2c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="1,2"
                            android:text="C"
                            />

                        <RadioButton
                            android:id="@+id/rb2d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="1,3"
                            android:text="D"
                            />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/resultado2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/radioGroup2"
                        android:text="Ninguna"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="3"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <RadioGroup
                        android:id="@+id/radioGroup3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="false"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/rb3a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="2,0"
                            android:text="A"
                            />

                        <RadioButton
                            android:id="@+id/rb3b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="2,1"
                            android:text="B"
                            />

                        <RadioButton
                            android:id="@+id/rb3c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="2,2"
                            android:text="C"
                            />

                        <RadioButton
                            android:id="@+id/rb3d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="2,3"
                            android:text="D"
                            />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/resultado3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/radioGroup3"
                        android:text="Ninguna"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="4"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <RadioGroup
                        android:id="@+id/radioGroup4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="false"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/rb4a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="3,0"
                            android:text="A"
                            />

                        <RadioButton
                            android:id="@+id/rb4b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="3,1"
                            android:text="B"
                            />

                        <RadioButton
                            android:id="@+id/rb4c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="3,2"
                            android:text="C"
                            />

                        <RadioButton
                            android:id="@+id/rb4d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="3,3"
                            android:text="D"
                            />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/resultado4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/radioGroup4"
                        android:text="Ninguna"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="5"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>

                    <RadioGroup
                        android:id="@+id/radioGroup5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="false"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/rb5a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="4,0"
                            android:text="A"
                            />

                        <RadioButton
                            android:id="@+id/rb5b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="4,1"
                            android:text="B"
                            />

                        <RadioButton
                            android:id="@+id/rb5c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="4,2"
                            android:text="C"
                            />

                        <RadioButton
                            android:id="@+id/rb5d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="buttonClickListener"
                            android:tag="4,3"
                            android:text="D"
                            />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/resultado5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/radioGroup5"
                        android:text="Ninguna"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                </RelativeLayout>


            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/matrixText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />


        <TextView
            android:id="@+id/volumecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

            <Button
                android:id="@+id/join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:onClick="changeRoom"
                android:text="Unirse"/>

            <EditText
                android:id="@+id/roomField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/join"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/join"
                android:ems="10"
                android:hint="Numero de sala"
                android:inputType="number"
                android:lines="1"
                android:maxLength="14"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/RoomTextViex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/roomField"
                android:layout_alignParentEnd="true"
                android:text="Sala"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>