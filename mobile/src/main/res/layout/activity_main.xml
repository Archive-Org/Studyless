<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.company.studyless.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <RadioButton
                    android:id="@+id/b1d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="buttonClickListener"
                    android:singleLine="true"
                    android:text="D"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/b1c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/b1d"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="buttonClickListener"
                    android:singleLine="true"
                    android:text="C"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/b1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/b1c"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="buttonClickListener"
                    android:singleLine="true"
                    android:text="B"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/b1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/b1b"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="buttonClickListener"
                    android:singleLine="true"
                    android:text="A"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="2"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <RadioButton
                    android:id="@+id/b2d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="buttonClickListener"
                    android:singleLine="true"
                    android:text="D"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/b2c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/b2d"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="buttonClickListener"
                    android:singleLine="true"
                    android:text="C"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/b2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/b2c"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="buttonClickListener"
                    android:singleLine="true"
                    android:text="B"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/b2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/b2b"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="buttonClickListener"
                    android:singleLine="true"
                    android:text="A"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="3"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <RadioButton
                    android:id="@+id/b3d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="buttonClickListener"
                    android:singleLine="true"
                    android:text="D"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/b3c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/b3d"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="buttonClickListener"
                    android:singleLine="true"
                    android:text="C"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/b3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/b3c"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="buttonClickListener"
                    android:singleLine="true"
                    android:text="B"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/b3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/b3b"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="buttonClickListener"
                    android:singleLine="true"
                    android:text="A"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </TableRow>

    </LinearLayout>
</RelativeLayout>
