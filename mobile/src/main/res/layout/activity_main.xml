<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.company.studyless.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="1"
                    android:id="@+id/textView"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D"
                    android:id="@+id/radioButton1d"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:allowUndo="true"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:id="@+id/radioButton1c"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/radioButton1d"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:id="@+id/radioButton1b"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/radioButton1c"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:id="@+id/radioButton1a"
                    android:checked="false"
                    android:clickable="true"
                    android:enabled="true"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/radioButton1b"
                    android:translationZ="5dp"/>

            </RelativeLayout>
        </TableRow>
    </LinearLayout>
</RelativeLayout>
